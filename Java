const roulette = document.getElementById("roulette");
const spinButton = document.getElementById("spin");
const result = document.getElementById("result");

const outcomes = [
  "💀 負け！",
  "🎉 勝ち！",
  "🔁 もう一回！",
  "✨ パルプンテ！何が起こるかわからない！"
];

spinButton.addEventListener("click", () => {
  // ランダムに角度を決める（最低3回転してから止まる）
  const randomDeg = 720 + Math.floor(Math.random() * 360); 
  roulette.style.transform = `rotate(${randomDeg}deg)`;

  // 停止後に結果を表示
  setTimeout(() => {
    const stopDeg = randomDeg % 360;

    let index;
    if (stopDeg < 90) index = 0;      // 負け
    else if (stopDeg < 180) index = 1; // 勝ち
    else if (stopDeg < 270) index = 2; // もう一回
    else index = 3;                   // パルプンテ

    result.textContent = outcomes[index];
  }, 3100); // transition時間よりちょっと長め
});
